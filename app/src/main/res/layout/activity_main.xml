<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/gradient_background">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/constraintLayout">

        <TextView
            android:id="@+id/mapText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:gravity="center"
            android:text="@string/headerName"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_weight="7"
            android:background="@color/grey">

            <com.example.mdp_android.MapGrid
                android:id="@+id/mapGrid"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1.2:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintButtons"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_gravity="center_vertical">

                    <RelativeLayout
                        android:id="@+id/movement_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"

                        android:layout_marginBottom="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="4:2.7"
                        app:layout_constraintEnd_toEndOf="@id/constraintButtons"
                        app:layout_constraintEnd_toStartOf="@id/constraintButtons">

                        <ImageButton
                            android:id="@+id/leftButton"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="25dp"
                            android:background="@null"
                            android:contentDescription="@string/move"
                            android:rotation="270"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/cotroller_button" />

                        <ImageButton
                            android:id="@+id/downButton"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_marginStart="58dp"
                            android:layout_marginTop="55dp"
                            android:background="@null"
                            android:contentDescription="@string/move"
                            android:rotation="180"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/cotroller_button" />

                        <ImageButton
                            android:id="@+id/rightButton"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_marginStart="110dp"
                            android:layout_marginTop="25dp"
                            android:background="@null"
                            android:contentDescription="@string/move"
                            android:rotation="90"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/cotroller_button" />

                        <ImageButton
                            android:id="@+id/upButton"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_marginStart="58dp"
                            android:layout_marginTop="2dp"
                            android:background="@null"
                            android:contentDescription="@string/move"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/cotroller_button" />

                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="133dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/yellow_box">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/robotStatus"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/robotStatus"
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:gravity="center" />

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="244dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/yellow_box"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/position"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="138dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/xLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/x"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/robotXCoordinate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/yLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/y"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/robotYCoordinate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/yellow_box"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/direction"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/robotDirection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/bluetooth_stream_box"
                    android:layout_width="244dp"
                    android:layout_height="244dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/yellow_box"
                    android:orientation="vertical"
                    android:textSize="11sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/textView"
                        android:textColor="@color/white"

                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12sp" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/taskButtons"
                    android:layout_width="153dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">

                    <RelativeLayout
                        android:id="@+id/task_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_marginTop="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="4:1"
                        app:layout_constraintEnd_toEndOf="@id/taskButtons"
                        app:layout_constraintEnd_toStartOf="@id/taskButtons">

                        <ImageButton
                            android:id="@+id/imageRecognitionStartButton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="1dp"
                            android:background="@color/blue"
                            android:contentDescription="@string/task1"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/detect" />

                        <ImageButton
                            android:id="@+id/fastestRobotStartButton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="72dp"
                            android:background="@color/blue"
                            android:contentDescription="@string/task2"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/speed" />

                        <ImageButton
                            android:id="@+id/sendArenaInfoButton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="144dp"
                            android:background="@color/blue"
                            android:contentDescription="@string/sendArena"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/arena" />

                        <ImageButton
                            android:id="@+id/manualSnapButton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="216dp"
                            android:background="@color/blue"
                            android:contentDescription="@string/manualSnap"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/snap" />

                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>